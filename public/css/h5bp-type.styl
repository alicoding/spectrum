/* =============================================================================
   Typography
   ========================================================================== */

b
	font-weight: bold

dfn
	font-style: italic

hr
	display: block
	height: 1px
	border: 0
	border-top: 1px solid $hrColor
	margin: 1em 0
	padding: 0

ins
	background: $insBackground
	color: $insText
	text-decoration: none

mark
	background: $markBackground
	color: $markText
	font-style: italic
	font-weight: bold

/* Redeclare monospace font family: h5bp.com/j */
pre,
code,
kbd,
samp
	font-family: monospace, serif
	_font-family: 'courier new', monospace

kbd,
samp
	font-size: 1em

/* Improve readability of pre-formatted text in all browsers */
pre
	word-wrap: break-word

q
	quotes: none
	&:before
	&:after
		content: none