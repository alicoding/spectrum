extends auth

block auth
  form.offset1.login.form-horizontal(action="/users/session", method="post")
    input(type='hidden', name='_csrf', value="#{csrf_token}")

    p.offset2.error= message

    .control-group
      label.control-label(for='email') Email
      .controls
        input.input-medium#email(type='email', name="email", placeholder='Email')

    .control-group
      label.control-label(for='password') Password
      .controls
        input.input-medium#password(type='password', name="password", placeholder='Password')

    .form-actions
      button.btn.btn-primary(type='submit') Login
      &nbsp;
      | or&nbsp;
      a.show-signup(href="/signup") sign up
